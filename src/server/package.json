{
  "name": "@bugpin/server",
  "version": "1.0.2",
  "license": "AGPL-3.0-only",
  "description": "BugPin server - Bun + Hono backend",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "dev": "NODE_ENV=development bun --watch index.ts",
    "build": "bun build index.ts --outdir ../../dist/server --target bun",
    "start": "bun run index.ts",
    "typecheck": "tsc --noEmit",
    "migrate": "bun run storage/migrations/index.ts",
    "migrate-to-s3": "bun run scripts/migrate-to-s3.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.654.0",
    "hono": "^4.6.0",
    "nodemailer": "^6.9.7",
    "sharp": "^0.34.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/nodemailer": "^6.4.14",
    "bun-types": "^1.3.5",
    "typescript": "^5.3.0"
  }
}
